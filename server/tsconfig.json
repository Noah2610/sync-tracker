{
    "compilerOptions": {
        "target": "ES5",
        "lib": [],
        "allowJs": false,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "module": "CommonJS",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "outDir": "dist",
        "baseUrl": "."
    },
    "include": ["./index.ts", "./src/**/*.ts", "../lib/**/*.ts"],
    "exclude": ["node_modules"]
}
