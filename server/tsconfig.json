{
    "compilerOptions": {
        "target": "ES5",
        "lib": [],
        "allowJs": false,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "module": "CommonJS",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "lib": ["../lib"],
            "lib/*": ["../lib/*"]
        }
    },
    "include": ["./src/**/*.ts", "../lib/**/*.ts"],
    "exclude": ["node_modules"]
}
