{
    "name": "sync-tracker",
    "version": "0.0.0",
    "description": "Multiplayer, synchronized music tracker app",
    "license": "MIT",
    "scripts": {
        "dev": "next dev --port 8080",
        "build": "next build",
        "start": "next start",
        "dev:server": "nodemon -w server/ -w lib/ -e ts -x '( yarn run start:server || false )'",
        "build:server": "cd server && tsc",
        "start:server": "yarn run build:server && cd server/dist && node server/index.js"
    },
    "dependencies": {
        "next": "^10.0.6",
        "react": "^17.0.1",
        "react-dom": "^17.0.1",
        "ws": "^7.4.2",
        "zod": "^1.11.11"
    },
    "devDependencies": {
        "@types/express": "^4.17.11",
        "@types/react": "^17.0.0",
        "@types/ws": "^7.4.0",
        "nodemon": "^2.0.7",
        "prettier": "^2.2.1",
        "tslint": "^6.1.3",
        "typescript": "^4.1.3"
    }
}
