{
    "name": "sync-tracker",
    "version": "0.0.0",
    "description": "Multiplayer, synchronized music tracker app",
    "license": "MIT",
    "scripts": {
        "dev": "next dev --port 8080",
        "build": "next build",
        "start": "next start",
        "dev:server": "nodemon -w server/ -w server/tsconfig.json -e ts,json -x '( yarn run start:server || false )'",
        "build:server": "cd server && tsc",
        "start:server": "yarn run build:server && cd server && node dist/index.js"
    },
    "dependencies": {
        "express": "^4.17.1",
        "next": "^10.0.6",
        "react": "^17.0.1",
        "react-dom": "^17.0.1",
        "ws": "^7.4.2"
    },
    "devDependencies": {
        "@types/express": "^4.17.11",
        "@types/react": "^17.0.0",
        "@types/ws": "^7.4.0",
        "nodemon": "^2.0.7",
        "ts-loader": "^8.0.14",
        "typescript": "^4.1.3",
        "webpack": "^5.19.0",
        "webpack-cli": "^4.5.0"
    }
}
